{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "platformAutomerge": true,
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "rebase"
    }
  ]
}
